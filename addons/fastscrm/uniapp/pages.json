{
  "easycom": {
    "^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
  },
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "工作台",
              "navigationBarBackgroundColor": "#0085f7",
              "navigationBarTextStyle": "white"
            }
		},
      {
        "path": "pages/index/customer",
        "style": {
          "navigationBarTitleText": "会员"
        }
      }
	    ,{
            "path" : "pages/index/performance",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "业绩",
              "navigationBarBackgroundColor": "#0085f7",
              "navigationBarTextStyle": "white"
            }
        }
        ,{
            "path" : "pages/index/member",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false,
              "navigationBarBackgroundColor": "#0085f7",
              "navigationBarTextStyle": "white"
            }
            
        }
    ,{
        "path" : "pages/member/qrcode",
        "style" :
        {
          "navigationBarTitleText": "二维码",
          "enablePullDownRefresh": false

        }

      }
    ,{
        "path" : "pages/member/set",
        "style" :
        {
          "navigationBarTitleText": "设置",
          "enablePullDownRefresh": false

        }

      }
    ,{
        "path" : "pages/member/needbind",
        "style" :
        {
          "navigationBarTitleText": "绑定门店",
          "enablePullDownRefresh": false

        }

      }
    ,{
        "path" : "pages/member/needlogin",
        "style" :
        {
          "navigationBarTitleText": "未找到员工",
          "enablePullDownRefresh": false

        }

      }
    ,{
        "path" : "pages/member/storebind",
        "style" :
        {
          "navigationBarTitleText": "选择门店",
          "enablePullDownRefresh": false

        }

      }
    ,{
        "path" : "pages/task/index",
        "style" :
        {
          "navigationBarTitleText": "营销任务",
          "enablePullDownRefresh": false

        }

      }
    ,{
        "path" : "pages/task/add",
        "style" :
        {
          "navigationBarTitleText": "新建任务",
          "enablePullDownRefresh": false

        }

      }


    ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#F2F2F2"
  },
  "tabBar": {
    "color": "#999",
    "selectedColor": "#E2231A",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [{
      "pagePath": "pages/index/index",
      "iconPath": "static/images/tabbar/home.png",
      "selectedIconPath": "static/images/tabbar/home_active.png",
      "text": "工作台"
    },
      {
        "pagePath": "pages/index/customer",
        "iconPath": "static/images/tabbar/category.png",
        "selectedIconPath": "static/images/tabbar/category_active.png",
        "text": "会员"
      },
      {
        "pagePath": "pages/index/performance",
        "iconPath": "static/images/tabbar/shop.png",
        "selectedIconPath": "static/images/tabbar/shop_active.png",
        "text": "业绩"
      },
      {
        "pagePath": "pages/index/member",
        "iconPath": "static/images/tabbar/user.png",
        "selectedIconPath": "static/images/tabbar/user_active.png",
        "text": "我的"
      }
    ]
  }
}
